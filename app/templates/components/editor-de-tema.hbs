<div class="card">
  <a class="btn-floating waves-effect waves-light red right"  {{action cerrarEditor}}><i class="material-icons ">close</i></a>
  <div class="card-content">
    <span class="card-title">Nueva propuesta</span>

    <div class="row ">

      {{tenpines/input-text label='Titulo' value=tema.titulo col='s4' }}

        <div class=" col s2 parcheDeContEditor"    >
          <label class="col" >Duracion</label>
          <div  class="col s12 parcheDeEditorBottom">
          {{#power-select
            options=nombreDeDuraciones
            selected=tema.duracion
            noMatchesMessage=""
            searchEnabled=false
            placeholder="Seleccione los asistentes a la reuni√≥n "
            onchange=(action (mut tema.duracion))
          as |duracion|
          }}
            {{duracion}} {{minutos-de-duracion duracion duraciones }}
          {{/power-select}}
          </div>

        </div>
        <div class="col s2 parcheDeContEditor">
        <div class="parcheDeEditorBottom " >
        {{materialize/check-box label='Obligatorio' checked=esObligatorio checkboxClasses="filled-in" disabled=checkboxDeshabilitado}}
        </div>
        </div>
      {{tenpines/text-area label='Descripcion' value=tema.descripcion col='s12' }}
    </div>

  </div>
  <div class="card-action right-align">
    <a class="waves-effect waves-light btn {{guardarHabilitado}}" onclick={{alGuardar}} >Guardar</a>
  </div>
</div>
